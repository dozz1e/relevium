---
const { data } = Astro.props;
---

<div class="relative bg-neutral-primary-soft shadow-lg p-6 rounded-base w-full">
  <div class="flex flex-col items-center">
    <div
      class="flex justify-center items-center bg-sky-600 rounded-full w-24 h-24"
    >
      <span set:html={data.image} />
    </div>
    <h5 class="mt-4 mb-0.5 font-semibold text-heading text-xl tracking-tight">
      {data.title}
    </h5>
    <span class="text-body text-sm text-center">{data.message}</span>
    <div class="flex gap-4 mt-4 md:mt-6">
      <a
        href=""
        class="inline-flex box-border items-center bg-sky-600 shadow-xs px-4 py-2.5 border border-transparent rounded-base focus:outline-none focus:ring-4 focus:ring-brand-medium font-medium text-white text-sm leading-5"
      >
        {data.button}
      </a>
    </div>
  </div>
</div>

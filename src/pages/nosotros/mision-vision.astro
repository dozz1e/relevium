---
import Layout from "@layouts/Layout.astro";
import Container from "@layouts/Container.astro";
import Contacto from "@components/inicio/Contacto.astro";
import Cabecera from "@components/inicio/Cabecera.astro";
interface Seo {
  title: string;
  description: string;
  url: string;
  image: string;
}

const seo: Seo = {
  title: "Misión y Visión - Clinica Integral Relevium",
  description:
    "Clínica Integral Relevium es el único Centro de Rehabilitación Maxilofacial que existe en Chile. Trabajamos con un equipo multidisciplinario.",
  url: "https://clinicarelevium.cl/nosotros/mision-vision",
  image:
    "https://clinicarelevium.cl/wp-content/uploads/2022/02/cropped-foto_01-scaled-1-416x120.jpg",
};

const datos = [
  {
    title: "Misión",
    message:
      "Cuida tu cuerpo. Reserva tu hora con un profesional especializado.",
  },
  {
    title: "Visión",
    message:
      "Ser reconocidos nacionalmente como el centro líder en rehabilitación cráneofacial, ampliando nuestra presencia en Chile con sucursales en principales ciudades, y ser un referente en investigación y formación en nuestra especialidad.",
  },
  {
    title: "Valores",
    message:
      "La declaración de valores en una clínica como Relevium es fundamental para nuestro enfoque principal en orientar nuestras prestaciones hacia el cuidado integral del paciente. Estos valores son los siguientes 1. Empatía: Creemos en el dolor de nuestro paciente y respondemos con sensibilidad y compromiso. 2. Excelencia: Mantenemos los más altos estándares de calidad en cada aspecto de nuestro tratamiento. 3. Colaboración: Fomentamos la colaboración entre especialistas para ofrecer una atención comprensiva e integrada.",
  },
];
---

<Layout dataPag={seo}>
  <Container>
    <div id="contenido" class="relative">
      <Cabecera
        image="/images/estetica-corporal.webp"
        title="Nuestra Misión y Visión en Clínica Relevium"
        texto="Centrados en el Cuidado Integral del Paciente."
      />
      <div class="mx-auto lg:mb-20 max-w-7xl">
        <div class="flex md:flex-row flex-col justify-center items-center">
          <img
            src="/images/mision-vision.webp"
            alt="Misión Visión"
            width="50%"
          />
          <div class="flex flex-col justify-between md:p-4 leading-normal">
            <div
              class="block bg-neutral-primary-soft hover:bg-neutral-secondary-medium p-6 max-w-sm"
            >
              <h5
                class="mb-3 font-semibold text-heading text-2xl leading-8 tracking-tight"
              >
                {datos[0].title}
              </h5>
              <p class="text-body">
                {datos[0].message}
              </p>
            </div>
            <div
              class="block bg-neutral-primary-soft hover:bg-neutral-secondary-medium p-6 max-w-sm"
            >
              <h5
                class="mb-3 font-semibold text-heading text-2xl leading-8 tracking-tight"
              >
                {datos[1].title}
              </h5>
              <p class="text-body">
                {datos[1].message}
              </p>
            </div>
          </div>
        </div>
        <div
          class="flex md:flex-row flex-col justify-center items-center mx-auto max-w-5xl"
        >
          <div
            class="block bg-neutral-primary-soft hover:bg-neutral-secondary-medium p-6"
          >
            <h5
              class="mb-3 font-semibold text-heading text-2xl leading-8 tracking-tight"
            >
              {datos[2].title}
            </h5>
            <p class="text-body">
              {datos[2].message}
            </p>
          </div>
        </div>
      </div>
    </div>
  </Container>
  <Contacto />
</Layout>
